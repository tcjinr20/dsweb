<div class="row">
    <% for(var i = 0 ;i<gamelist.length;i++){%>
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img alt="100%x200" style="height: 200px; width: 100%; display: block;" src="<%=gamelist[i].img %>" data-holder-rendered="true">
            <div class="caption">
                <h3><%=gamelist[i].gamename %></h3>
                <p><%=gamelist[i].gamedes %></p>
                <p>作者：<%=gamelist[i].author %></p>
                <p>
                    <a href="/game/play?id=<%=gamelist[i]._id %>" class="btn btn-primary" role="button">开始</a>
                </p>
            </div>
        </div>
    </div>
    <%}%>
</div>